.post
  %header
    %h3= link_to post.title, post_path(post)
    %p.meta
      = image_tag "date.png", alt: "Date"
      %time{ datetime: post.created_at }
        = post.created_at.strftime("%A, %e %B %Y")
      &#8226;
      = link_to "#{post.comments.count} Comments", "#comments", class: "comments"
      &#8226;
      = link_to "Edit", edit_admin_post_path(post)
  %section
    = raw post.content
